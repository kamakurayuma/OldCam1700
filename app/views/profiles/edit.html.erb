<% content_for(:title, 'マイページ編集') %>
<div class="edit-container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="edit-title">マ イ ペ ー ジ 編 集</h1>
      
      <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <div class="d-flex align-items-center" style="gap: 30px;">
          <div class="edit_avatar">
            <!-- SimpleFileUploadによるアップロード -->
            <%= f.hidden_field :avatar_url, class: 'simple-file-upload' %>
            <div class="image-preview" onclick="document.querySelector('.simple-file-upload').click();"></div>
          </div>
      
          <div class="edit-username">
            <%= f.label :ユーザーネーム, class: "form-label" %>
            <%= f.text_field :user_name, class: "form-control" %>
          </div>
        </div>
      
        <div class="edit-bio">
          <%= f.label :bio, '自己紹介文', class: "form-label" %>
          <%= f.text_area :bio, class: "form-control", rows: 3 %>
        </div>
      
        <div class="edit-email">
          <%= f.label :メールアドレス, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
      
        <div class="button-container">
          <%= link_to '戻る', profile_path, class: "btn btn-secondary" %>
          <%= f.submit '更新する', class: "btn update-btn" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>

<script>
  // 画像プレビュー用のJavaScript
  function previewImage(event) {
    const file = event.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        document.getElementById('preview').src = e.target.result;
      };
      reader.readAsDataURL(file);
    }
  }
</script>
