<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
        <div class="d-flex justify-content-center align-items-center mb-5">
            <h1 class="text-center" style="font-size: 24px; font-weight: 300;">新 規 登 録</h1>
            <%= link_to 'ログインページへ', login_path, class: 'btn2 ml-auto' %>
        </div>
      <%= form_with model: @user do |f| %>
        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :last_name, "ユーザーネーム", class: "form-label", style: "font-size: 17px; font-weight: 300;" %>
          </div>
          <div class="col-sm-7">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
        
        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :email, "メールアドレス", class: "form-label", style: "font-size: 17px; font-weight: 300;" %>
          </div>
          <div class="col-sm-7">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        
        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :password, "パスワード", class: "form-label", style: "font-size: 17px; font-weight: 300;" %>
          </div>
          <div class="col-sm-7">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        
        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :password_confirmation, "パスワードの確認", class: "form-label", style: "font-size: 15px; font-weight: 300;" %>
          </div>
          <div class="col-sm-7">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        
        <div class="row mt-5">
          <div class="col text-center mb-4">
            <%= f.submit "登録", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>      
    </div>
  </div>
</div>