<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
        <div class="d-flex justify-content-center align-items-center mb-5">
            <h1 class="text-center" style="font-size: 24px; font-weight: 300; flex-grow: 1;">ロ グ イ ン</h1>
            <%= link_to '新規登録はこちら', new_user_path, class: 'btn2 ml-auto' %>
        </div>

      <%= form_with(url: user_sessions_path, method: :post) do |f| %>

         <%= render 'shared/error_messages', object: @user %>

        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :email, "メールアドレス", class: "form-label", style: "font-size: 17px; font-weight: 300;" %>
          </div>
          <div class="col-sm-7">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="mb-4 row justify-content-center">
          <div class="col-sm-2">
            <%= f.label :password, "パスワード", class: "form-label", style: "font-size: 17px; font-weight: 300;"%>
          </div>
          <div class="col-sm-7">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="mb-3 row justify-content-center">
          <div class="col-auto">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me, {}, '1', '0' %>
                <span style="font-weight: 300;">ログイン情報を保存する</span>
            <% end %>
          </div>
        </div>

        <div class="row mt-5">
            <div class="col text-center mb-4">
                <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
        </div>
      <% end %>

      <div class="mb-4 row justify-content-center d-flex mt-1 mb-3">
        <div class="col-12 d-flex justify-content-center">
          
          <!-- クライアントライブラリの読み込み -->
          <script src="https://accounts.google.com/gsi/client" async defer></script>
          
          <% if notice.present? %>
            <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
              <%= notice %>
            </p>
          <% end %>
          
          <!-- Googleログインボタンの表示 -->
          <div id="g_id_onload"
               data-client_id="561585853461-5h5kubhcidtgtnaebovacqd5i948vavf.apps.googleusercontent.com"
               data-login_uri="http://localhost:3000/google_login_api/callback"
               data-auto_prompt="false">
          </div>
          
          <div class="g_id_signin"
               data-type="standard"
               data-size="large"
               data-theme="outline"
               data-text="signin_with_google"
               data-shape="rectangular"
               data-logo_alignment="left">
          </div>         
        </div>
      </div>

      <div class="text-center mb-3">
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'color-link' %>
      </div>
    </div>
  </div>
</div>
