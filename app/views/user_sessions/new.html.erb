<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center mb-5" style="font-size: 24px; font-weight: 300; ">ロ グ イ ン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-4 row">
          <div class="col-sm-4">
          <%= f.label :email, "メールアドレス", class: "form-label", style: "font-size: 17px; font-weight: 300;" %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="mb-4 row">
          <div class="col-sm-4">
            <%= f.label :password, "パスワード", class: "form-label", style: "font-size: 17px; font-weight: 300;"%>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class="text-center">
        <%= link_to '登録ページへ', new_user_path %>
        <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
      </div>
    </div>
  </div>
</div>
