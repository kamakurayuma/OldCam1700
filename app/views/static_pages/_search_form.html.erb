<%= form_with model: q, url: boards_search_path, method: :get, local: true, class: "form-inline" do |f| %>
  <div style="width: 400px; margin: 0 auto;">
    <div class="input-group mb-5">
      <%= f.text_field :query_cont, id: 'autocomplete', class: "form-control", placeholder: "カメラのメーカーまたは機種で検索" %>
      <div class="input-group-append">
        <%= f.submit "検索", class: "btn btn-primary", style: "min-width: 60px; white-space: nowrap;" %>
      </div>
    </div>
  </div>
<% end %>
