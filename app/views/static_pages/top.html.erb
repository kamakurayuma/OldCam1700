<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= form_with url: cameras_search_path, method: :get, class: "form-inline" do %>
        <div style="width: 400px; margin: 0 auto;">
          <div class="input-group mb-5">
            <%= text_field_tag :query, params[:query], class: "form-control search-input", placeholder: "カメラのメーカーまたは機種を検索" %>
            <div class="input-group-append">
              <%= submit_tag "検索", class: "btn btn-primary", style: "min-width: 60px; white-space: nowrap;" %>
            </div>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 text-center mb-5">
    <h2 style="font-weight: 100;">最 新 の 投 稿</h2>
  </div>
</div>

  <!-- 掲示板一覧 -->
  <div class="row index-row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <%= render @boards %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
         <%= paginate @boards %>
      </div>
    </div>
  </div>
</div>


