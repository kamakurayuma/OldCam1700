<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <form>
        <div style="width: 400px; margin: 0 auto;">
            <div class="input-group mb-5">
                <input class="form-control search-input" placeholder="カメラを検索" type="search" />
                     <div class="input-group-append">
                        <input type="submit" value="検索" class="btn btn-primary" style="min-width: 60px; white-space: nowrap;" />
                    </div>
            </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 text-center mb-5">
    <h2 style="font-weight: 100;">最 新 の 投 稿</h2>
  </div>
</div>

  <!-- 掲示板一覧 -->
  <div class="row index-row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <%= render @boards %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>


