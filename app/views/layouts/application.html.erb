<!DOCTYPE html>
<html>
  <head>
    <title>OldCam1700</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>

    <link rel="preload" href="<%= asset_path('application.css') %>" as="style">
    <link rel="preload" href="<%= asset_path('application.js') %>" as="script">

    <link rel="icon" href="<%= asset_path 'favicon.ico' %>" type="image/x-icon">

    <%= show_meta_tags(@board) %>

    <script src="https://app.simplefileupload.com/buckets/b1bb1ece942c4895061c0618b7218fa7.js"></script>
    

  </head>

  <body>
    <% if logged_in? %>
      <%= render 'shared/header' %>
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>
      <%= render 'shared/flash_message' %>
    <%= yield %>
      <%= render 'shared/footer' %>
      <%= render 'shared/modal' %>
  </body>
</html>

