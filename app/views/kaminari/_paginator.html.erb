<%= paginator.render do %>
  <nav>
    <ul class="pagination justify-content-center">
      
      <!-- 前のページリンク（＜） -->
      <% if current_page > 1 %>
        <li class="page-item">
          <%= link_to '＜', url_for(page: current_page - 1), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">＜</span>
        </li>
      <% end %>

      <!-- ページ番号 -->
      <% each_page do |page| %>
        <% if page.left_outer? || page.right_outer? || page.inside_window? %>
          <li class="page-item <%= 'active' if page == current_page %>">
            <%= link_to page, url_for(page: page), class: "page-link" %>
          </li>
        <% elsif !page.was_truncated? %>
          <%= gap_tag %>
        <% end %>
      <% end %>

      <!-- 次のページリンク（＞） -->
      <% if current_page < total_pages %>
        <li class="page-item">
          <%= link_to '＞', url_for(page: current_page + 1), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">＞</span>
        </li>
      <% end %>

    </ul>
  </nav>
<% end %>
