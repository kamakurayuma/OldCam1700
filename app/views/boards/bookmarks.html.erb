<% content_for(:title, "いいねした投稿") %>
<div class="user-posts mt-5">
  <h2 style="line-height: 1; font-weight: 300; text-align: center; margin-bottom: 60px;">
    <%= "いいねした投稿" %>
  </h2>
  <!-- 掲示板一覧 -->
  <% if @bookmark_boards.any? %>  <!-- ブックマークされた投稿があれば表示 -->
    <div class="image-container2 d-flex flex-wrap justify-content-center">
      <% @bookmark_boards.each do |board| %>
        <div class="image-item2">
          <%= link_to board_path(board) do %>  <!-- クリックしたら投稿詳細ページに遷移 -->
            <% if board.board_image.content_type.starts_with?('image/') %>
              <%= image_tag(board.board_image.url, class: 'img-fluid') %>  <!-- 画像なら表示 -->
            <% else %>
              <%= video_tag(board.board_image.url, controls: true, class: 'img-fluid', style: 'height: 200px; width: auto; max-width: 100%; object-fit: contain; display: block; margin: 0; padding: 0;') %>  <!-- 動画なら表示 -->
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p style="text-align: center; color: #888; font-size: 18px; margin-top: 100px;">まだいいねした投稿はありません</p>
  <% end %>

  <%= paginate @bookmark_boards %>
